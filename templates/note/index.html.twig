{% extends 'base.html.twig' %}

{% block title %}All Notes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>All Notes</h1>
        <div class="row">
            {% for note in notes %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ note.title }}</h5>
                            <p class="card-text">{{ note.content|slice(0, 100) }}...</p>
                            <a href="{{ path('app_note_show', {'id': note.id}) }}" class="btn btn-primary">View</a>
                            {% if is_granted('edit', note) %}
                                <a href="{{ path('app_note_edit', {'id': note.id}) }}" class="btn btn-secondary">Edit</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}