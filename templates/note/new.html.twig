{% extends 'base.html.twig' %}

{% block title %}{{ (note is defined) ? 'Edit Note' : 'New Note' }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ (note is defined) ? 'Edit Note' : 'Create New Note' }}</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">{{ (note is defined) ? 'Update' : 'Create' }}</button>
        <a href="{{ path('app_my_notes') }}" class="btn btn-secondary">Cancel</a>
        {{ form_end(form) }}
    </div>
{% endblock %}