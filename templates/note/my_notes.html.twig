{% extends 'base.html.twig' %}

{% block title %}My Notes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>My Notes</h1>
        <a href="{{ path('app_note_new') }}" class="btn btn-success mb-3">Create New Note</a>

        <div class="row">
            {% for note in notes %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ note.title }}</h5>
                            <p class="card-text">{{ note.content|slice(0, 100) }}...</p>
                            <small class="text-muted">
                                Assigned to: {{ note.assignedTo ? note.assignedTo.email : 'None' }}
                            </small>
                            <div class="mt-2">
                                <a href="{{ path('app_note_show', {'id': note.id}) }}" class="btn btn-primary">View</a>
                                <a href="{{ path('app_note_edit', {'id': note.id}) }}" class="btn btn-secondary">Edit</a>
                                <form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}