{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="background-overlay"></div>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-xl-6 col-lg-8 col-md-10">
        <div class="card p-4 p-lg-5">
            <div class="text-center mb-4">
                <img src="{{ asset('img/logoOur.png') }}" alt="Logo" class="mb-4" style="height: 60px;">
                <h2 class="mb-3 fw-bold">Mot de passe oublié</h2>
            </div>

            {{ form_start(requestForm, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="mb-4">
                    {{ form_label(requestForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(requestForm.email, {'attr': {
                        'class': 'form-control' ~ (requestForm.email.vars.errors|length ? ' is-invalid' : ''),
                        'placeholder': 'ex: jean.dupont@email.com'
                    }}) }}
                    {% if requestForm.email.vars.errors|length %}
                        <div class="invalid-feedback">
                            {% for error in requestForm.email.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-send me-2"></i>
                        Envoyer le code de vérification
                    </button>
                </div>
            {{ form_end(requestForm) }}

            <div class="text-center mt-4">
                <a href="{{ path('app_login') }}" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la connexion
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}