{% extends 'base_frontOffice.html.twig' %}

{% block title %}Détails du Terrain - Our Batima{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        .terrain-details {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.14), 
                        0 7px 10px -5px rgba(0, 0, 0, 0.4);
            padding: 30px;
            margin-bottom: 30px;
        }
        .detail-header {
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 30px;
        }
        .detail-group {
            margin-bottom: 1.5rem;
        }
        .detail-label {
            font-weight: 600;
            color: #6c757d;
        }
        .detail-value {
            font-weight: normal;
        }
        #terrain-map {
            height: 400px;
            border-radius: 12px;
            margin-bottom: 20px;
            border: 2px solid #dee2e6;
        }
        .btn-action {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Détails du Terrain</h2>
                </div>
                <div class="col-12">
                    <a href="{{ path('app_home') }}">Accueil</a>
                    <a href="{{ path('app_projet_front_index') }}">Projets</a>
                    <a href="#">Terrain</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Terrain Details Start -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="terrain-details">
                    <div class="detail-header">
                        <h3><i class="fas fa-map-marker-alt me-2"></i> {{ terrain.emplacement }}</h3>
                        <p class="text-muted">Détails complets du terrain</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ mapHTML|raw }}
                        </div>
                        
                        <div class="col-md-6">
                            <div class="detail-group">
                                <span class="detail-label">Caractéristiques:</span>
                                <span class="detail-value">{{ terrain.caracteristiques ?? 'Non spécifié' }}</span>
                            </div>
                            <div class="detail-group">
                                <span class="detail-label">Superficie:</span>
                                <span class="detail-value">{{ terrain.superficie }} m²</span>
                            </div>
                            
                            <div class="detail-group">
                                <span class="detail-label">Détails Géographiques:</span>
                                <span class="detail-value">{{ terrain.detailsgeo ?? 'Non spécifié' }}</span>
                            </div>
                            

                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="{{ path('app_projet_front_index', {'mine': true}) }}" class="btn btn-primary btn-action">
                            <i class="fas fa-arrow-left me-1"></i> Retour aux projets
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Terrain Details End -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
{% endblock %}