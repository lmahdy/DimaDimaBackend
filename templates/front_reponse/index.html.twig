{% extends 'base_FrontOffice.html.twig' %}

{% block title %}Liste des Réponses{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 30px;
            color: #343a40;
            text-align: center;
            padding-top: 20px;
        }
        
        .reponse-card {
            margin-bottom: 20px;
            transition: transform 0.3s ease;
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        
        .reponse-card:hover {
            transform: translateY(-5px);
        }
        
        .card-header {
            background-color: #343a40;
            color: white;
            font-weight: 600;
        }
        
        .status-badge {
            font-size: 0.8rem;
            padding: 5px 10px;
            border-radius: 20px;
        }
        
        .status-pending {
            background-color: #17a2b8;
            color: white;
        }
        
        .status-progress {
            background-color: #ffc107;
            color: #343a40;
        }
        
        .status-resolved {
            background-color: #28a745;
            color: white;
        }
        
        .status-closed {
            background-color: #6c757d;
            color: white;
        }
        
        .action-btn {
            margin-right: 5px;
        }
        
        .search-container {
            margin-bottom: 30px;
            padding-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title">Réponses</h1>
        
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher une réponse...">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
        
        {% if reponses|length > 0 %}
            <div class="row" id="reponsesContainer">
                {% for reponse in reponses %}
                    <div class="col-md-6 reponse-item">
                        <div class="card reponse-card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Réponse #{{ reponse.id }}</h5>
                                <span class="status-badge 
                                    {% if reponse.statut == 'Pending' %}status-pending
                                    {% elseif reponse.statut == 'In Progress' %}status-progress
                                    {% elseif reponse.statut == 'Resolved' %}status-resolved
                                    {% else %}status-closed{% endif %}">
                                    {{ reponse.statut }}
                                </span>
                            </div>
                            <div class="card-body">
                                <p class="card-text">{{ reponse.description|length > 100 ? reponse.description|slice(0, 100) ~ '...' : reponse.description }}</p>
                                <p class="card-text"><small class="text-muted">Date: {{ reponse.date }}</small></p>
                                {% if reponse.reclamation_id %}
                                <p class="card-text"><small class="text-muted">Réclamation: #{{ reponse.reclamation_id }}</small></p>
                                {% endif %}
                                <div class="mt-3">
                                    <a href="{{ path('app_front_reponse_show', {'id': reponse.id}) }}" class="btn btn-sm btn-info action-btn">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Aucune réponse trouvée.
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Search functionality
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".reponse-item").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
