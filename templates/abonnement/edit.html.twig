{% extends 'base.html.twig' %}

{% block title %}Modifier Abonnement{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row align-items-stretch">
            <!-- Image Column -->
            <div class="col-md-6 mb-4 mb-md-0 d-flex">
                <div class="w-100 h-100 rounded shadow overflow-hidden">
                    <img src="{{ asset('img/abonnement.png') }}" 
                         alt="Abonnement" 
                         class="img-fluid h-100 w-100 object-fit-cover">
                </div>
            </div>

            <!-- Form Column -->
            <div class="col-md-6 d-flex">
                <div class="card shadow w-100">
                    <div class="card-body p-5">
                        <h2 class="mb-4 text-center">Modifier l’abonnement</h2>

                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.nomAbonnement, "Nom de l'abonnement", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.nomAbonnement, {
                                    'attr': {
                                        'class': 'form-control',
                                        'required': 'required',
                                        'pattern': '[a-zA-Z ]{3,50}',
                                        'title': '3 à 50 caractères alphanumériques',
                                        'minlength': '3',
                                        'maxlength': '50',
                                        'oninput': "this.value = this.value.replace(/[^a-zA-Z ]/g, '')"
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    Le nom doit contenir entre 3 et 50 caractères (lettres uniquement)
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.duree, "Durée", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.duree, {
                                    'attr': {
                                        'class': 'form-control',
                                        'required': 'required',
                                        'pattern': '[a-zA-Z0-9]{3,10}',
                                        'title': 'Exactement 10 caractères alphanumériques requis',
                                        'minlength': '10',
                                        'maxlength': '10',
                                        'oninput': "this.value = this.value.replace(/[^a-zA-Z0-9]/g, '')"
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    Veuillez entrer entre 3 et 10 caractères alphanumériques.
                                </div>
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.prix, {
                                    'attr': {
                                        'class': 'form-control',
                                        'min': 5,
                                        'max': 500,
                                        'step': '0.01',
                                        'pattern': '[0-9]{1,3}(\\.[0-9]{1,2})?',
                                        'placeholder': 'Entrez un prix entre 5 et 500 DT',
                                        'required': 'required',
                                        'oninput': "this.value = this.value.replace(/[^0-9.]/g, '')"
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.prix) }}
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end gap-3">
                                <a style="margin-right: 10px;" href="{{ path('app_abonnement_index') }}" class="btn btn-outline-secondary">
                                   <img src="{{ asset('img/reply.png') }}" alt="return" width="30" height="30">
                                </a>
                                <button style="margin-right: 10px;" type="submit" class="btn btn-primary">
                                    Modifier
                                </button>
                            </div>
                        {{ form_end(form) }}

                        <div class="mt-4 text-end">
                            {{ include('abonnement/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        @media (max-width: 767.98px) {
            .img-column {
                min-height: 300px;
            }
        }
    </style>
{% endblock %}
