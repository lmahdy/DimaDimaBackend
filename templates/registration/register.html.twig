{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .register-card {
      border-radius: 12px;
      box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.14), 
                  0 7px 10px -5px rgba(0, 0, 0, 0.4);
      overflow: hidden;
    }
    .form-control:focus {
      border-color: #344767;
      box-shadow: 0 0 0 0.2rem rgba(52, 71, 103, 0.25);
    }
    .form-label {
      font-weight: 600;
      color: #344767;
      font-size: 0.875rem;
    }
  </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="register-card">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 text-center">
            <h4 class="text-white font-weight-bolder text-capitalize">Créer un compte</h4>
          </div>
        </div>
        
        <div class="card-body p-4">
          {{ form_start(registrationForm) }}
          
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group input-group-outline">
                  {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(registrationForm.nom) }}
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="form-group mb-3">
                {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group input-group-outline">
                  {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(registrationForm.prenom) }}
              </div>
            </div>
          </div>
          
          <div class="form-group mb-3">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group input-group-outline">
              {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(registrationForm.email) }}
          </div>
          
          <div class="form-group mb-3">
            {{ form_label(registrationForm.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group input-group-outline">
              {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(registrationForm.telephone) }}
          </div>
          
          <div class="form-group mb-3">
            {{ form_label(registrationForm.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group input-group-outline">
              {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control', 'rows': 3}}) }}
            </div>
            {{ form_errors(registrationForm.adresse) }}
          </div>
          
          <div class="form-group mb-3">
            {{ form_label(registrationForm.role, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group input-group-outline">
              {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(registrationForm.role) }}
          </div>
          
          <div class="form-group mb-4">
            {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group input-group-outline">
              {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(registrationForm.plainPassword) }}
          </div>
          
          <div class="text-center">
            <button type="submit" class="btn btn-outline-dark w-50">
              <i class="material-symbols-rounded me-1">person_add</i>
              S'inscrire
            </button>
          </div>
          
          <div class="mt-3 text-center">
            <a href="{{ path('app_login') }}" class="text-sm text-secondary">
              Déjà inscrit ? Se connecter
            </a>
          </div>
          
          {{ form_end(registrationForm) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
