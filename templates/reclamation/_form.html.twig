{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div id="form-errors" class="d-none"></div>
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {
            'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid'),
            'data-required': 'true'
        }}) }}
        <div class="error-message text-danger mt-1" style="display: none;">
            Ce champ est obligatoire
        </div>
        {% if not form.description.vars.valid %}
            <div class="invalid-feedback">
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.statut) }}
        {{ form_widget(form.statut, {'attr': {'class': 'form-control' ~ (form.statut.vars.valid ? '' : ' is-invalid')}}) }}
        {% if not form.statut.vars.valid %}
            <div class="invalid-feedback">
                {{ form_errors(form.statut) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control' ~ (form.date.vars.valid ? '' : ' is-invalid')}}) }}
        {% if not form.date.vars.valid %}
            <div class="invalid-feedback">
                {{ form_errors(form.date) }}
            </div>
        {% endif %}
    </div>

    {% if form.Utilisateur_id is defined %}
    <div class="form-group">
        {{ form_label(form.Utilisateur_id) }}
        {{ form_widget(form.Utilisateur_id, {'attr': {'class': 'form-control' ~ (form.Utilisateur_id.vars.valid ? '' : ' is-invalid')}}) }}
        {% if not form.Utilisateur_id.vars.valid %}
            <div class="invalid-feedback">
                {{ form_errors(form.Utilisateur_id) }}
            </div>
        {% endif %}
    </div>
    {% endif %}

    <button class="btn btn-outline-dark mt-3">
        <i class="material-symbols-rounded me-1">save</i>
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
