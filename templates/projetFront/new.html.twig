{% extends 'base_frontOffice.html.twig' %}

{% block title %}Nouveau Projet - Our Batima{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .project-form {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.14), 
                        0 7px 10px -5px rgba(0, 0, 0, 0.4);
            padding: 30px;
            margin-bottom: 30px;
        }
        .form-header {
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-control {
            border-radius: 8px;
            padding: 10px 15px;
            border: 1px solid #d2d6da;
            transition: all 0.3s;
        }
        .form-control:focus {
            border-color: #e91e63;
            box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
        }
        .form-text {
            font-size: 0.8rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
        .btn-action-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #d2d6da;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Nouveau Projet</h2>
                </div>
                <div class="col-12">
                    <a href="{{ path('app_home') }}">Accueil</a>
                    <a href="{{ path('app_projet_front_index') }}">Projets</a>
                    <a href="#">Nouveau Projet</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Project Form Start -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="project-form">
                    <div class="form-header">
                        <h3><i class="fas fa-plus-circle me-2"></i>Créer un nouveau Projet</h3>
                        <p class="text-muted">Remplissez les détails ci-dessous pour créer un nouveau projet</p>
                    </div>
                    
                    {# Flash messages #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nomprojet) }}
                                    {{ form_widget(form.nomprojet, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Ex: Villa moderne à Sousse'
                                        }
                                    }) }}
                                    <small class="form-text">Entrez un nom descriptif pour votre projet</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.type) }}
                                    {{ form_widget(form.type, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Sélectionnez le type de projet'
                                        }
                                    }) }}
                                    <small class="form-text">Choisissez le type de construction</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.stylearch) }}
                                    {{ form_widget(form.stylearch, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Ex: Moderne, Classique, Méditerranéen'
                                        }
                                    }) }}
                                    <small class="form-text">Décrivez le style architectural</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.budget) }}
                                    <div class="input-group">
                                        {{ form_widget(form.budget, {
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Ex: 250000'
                                            }
                                        }) }}
                                        <span class="input-group-text">TND</span>
                                    </div>
                                    <small class="form-text">Estimation du budget total</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.etat) }}
                            {{ form_widget(form.etat, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Sélectionnez l\'état du projet'
                                }
                            }) }}
                            <small class="form-text">État actuel du projet</small>
                        </div>

                        <div class="form-group">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    {{ form_label(form.idTerrain) }}
                                    {{ form_widget(form.idTerrain, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Sélectionnez un terrain'
                                        }
                                    }) }}
                                    <small class="form-text">Terrain associé à ce projet</small>
                                </div>
                                <div class="ms-3" style="margin-top: 28px;">
                                    <a href="{{ path('app_terrain_new') }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-plus me-1"></i>
                                        Ajouter un terrain
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.idEquipe) }}
                                    {{ form_widget(form.idEquipe, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Sélectionnez une équipe'
                                        }
                                    }) }}
                                    <small class="form-text">Équipe en charge du projet</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nomClient) }}
                                    {{ form_widget(form.nomClient, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Email du client'
                                        }
                                    }) }}
                                    <small class="form-text">Client associé à ce projet</small>
                                </div>
                            </div>
                        </div>

                        <div class="btn-action-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Enregistrer
                            </button>
                            <a href="{{ path('app_projet_front_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Project Form End -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Input masking for budget field
            $('input[name$="[budget]"]').inputmask('numeric', {
                radixPoint: ".",
                groupSeparator: ",",
                digits: 2,
                autoGroup: true,
                rightAlign: false
            });
        });
    </script>
{% endblock %}