{#
/**
 * @file
 * Bootstrap v4 Filtration control implementation.
 */
#}
<form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">
    <div class="input-group mb-3">
        {% if fields|length > 1 %}
            <div class="input-group-prepend">
                <select class="custom-select" name="{{ filterFieldName }}">
                    {% for field, label in fields %}
                        <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
        {% else %}
            <input type="hidden" name="{{ filterFieldName }}" value="{{ fields|keys|first }}" />
        {% endif %}
        <input class="form-control" type="search" value="{{ selectedValue }}" name="{{ filterValueName }}" placeholder="{{ 'Search'|trans }}" />
        <div class="input-group-append">
            <button class="btn btn-outline-primary" type="submit"><i class="fa fa-search"></i></button>
        </div>
    </div>
</form>
