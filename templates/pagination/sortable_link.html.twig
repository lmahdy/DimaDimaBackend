{#
/**
 * @file
 * Sortable link template for Bootstrap 4
 */
#}
<a{% for attr, value in options %} {{ attr }}="{{ value }}"{% endfor %}>
    {{ title }}
    {% if sorted %}
        {% if direction == 'desc' %}
            <i class="fa fa-sort-down"></i>
        {% else %}
            <i class="fa fa-sort-up"></i>
        {% endif %}
    {% else %}
        <i class="fa fa-sort"></i>
    {% endif %}
</a>
