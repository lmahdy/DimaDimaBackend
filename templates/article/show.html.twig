{% extends 'base_backOffice.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
  <style>
    .card {
      border-radius: 12px;
      box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.14), 
                  0 7px 10px -5px rgba(0, 0, 0, 0.4);
    }
    .btn-action-group {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }
    .table th {
      width: 30%;
    }
    .photo-preview {
      max-width: 200px;
      max-height: 200px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
  </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">
              <i class="material-symbols-rounded me-2">article</i>
              Détails de l'Article
            </h6>
          </div>
        </div>
        <div class="card-body px-0 pb-2">
          <div class="table-responsive p-3">
            <table class="table align-items-center mb-0">
              <tbody>
                <tr>
                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Id</th>
                  <td class="text-sm font-weight-bold">{{ article.id }}</td>
                </tr>
                <tr>
                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Nom</th>
                  <td class="text-sm">{{ article.nom }}</td>
                </tr>
                <tr>
                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Description</th>
                  <td class="text-sm">{{ article.description }}</td>
                </tr>
                <tr>
                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Prix Unitaire</th>
                  <td class="text-sm">{{ article.prixUnitaire }}</td>
                </tr>
                <tr>
                  <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Photo</th>
                  <td>
                    {% if article.photo %}
                      <img src="{{ article.photo }}" alt="Photo de l'article" class="photo-preview">
                    {% else %}
                      <p class="text-sm">Aucune photo disponible</p>
                    {% endif %}
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          
          <div class="ps-3 btn-action-group">
            <a class="btn btn-outline-secondary" href="{{ path('app_article_index') }}">
              <i class="material-symbols-rounded me-1">arrow_back</i>
              Retour à la liste
            </a>
            <a class="btn btn-outline-primary" href="{{ path('app_article_edit', {'id': article.id}) }}">
              <i class="material-symbols-rounded me-1">edit</i>
              Modifier
            </a>
            {{ include('article/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
