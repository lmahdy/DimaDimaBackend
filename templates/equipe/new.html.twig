{% extends 'base_backOffice.html.twig' %}

{% block title %}Gestion Equipe{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">
                            {% if edit_mode %}
                                Modifier Equipe
                            {% else %}
                                Cr√©er Equipe
                            {% endif %}
                        </h6>
                    </div>
                </div>
                <div class="card-body px-4 pb-2">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.constructeur) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.gestionnairestock) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.artisan) }}
                            </div>
                        </div>
                        <button class="btn btn-dark mt-3">{{ button_label|default('Enregistrer') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}