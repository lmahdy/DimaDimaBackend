{% extends 'base.html.twig' %}
{% block title %}Notifications{% endblock %}

{% block body %}
    <h1>Notifications</h1>

    {% if notifications is empty %}
        <p>No notifications found.</p>
    {% else %}
        <ul class="list-group">
            {% for notification in notifications %}
                <a href="{{ path('notification_mark_read', {id: notification.id}) }}"
                   class="list-group-item list-group-item-action {% if notification.isRead %}list-group-item-light{% else %}list-group-item-warning{% endif %}">
                    {{ notification.message }}
                    <span class="badge bg-secondary">{{ notification.createdAt|date('Y-m-d H:i') }}</span>
                    {% if not notification.isRead %}
                        <span class="badge bg-danger ms-2">New</span>
                    {% endif %}
                </a>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}