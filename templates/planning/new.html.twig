{% extends 'base.html.twig' %}

{% block title %}New Planning{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Create New Planning</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.note, {
                    'attr': {'class': 'form-select'}
                }) }}

                {{ form_row(form.date_planifie, {
                    'attr': {'class': 'form-control flatpickr-date'}
                }) }}
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.heure_debut) }}
                    {{ form_widget(form.heure_debut, {
                        'attr': {
                            'class': 'form-control flatpickr-time',
                            'placeholder': 'Select start time'
                        }
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.heure_fin) }}
                    {{ form_widget(form.heure_fin, {
                        'attr': {
                            'class': 'form-control flatpickr-time',
                            'placeholder': 'Select end time'
                        }
                    }) }}
                </div>

                {{ form_row(form.statut, {
                    'attr': {'class': 'form-select'}
                }) }}
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Create Planning</button>
            <a href="{{ path('planning_index') }}" class="btn btn-secondary">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        class Flatpickr {
            constructor(s, param2) {
                this.s = s;
                this.param2 = param2;
                this.init();

            }

            init() {
                // Initialize flatpickr
                this.flatpickrInstance = flatpickr(this.s, this.param2);
            }
        }

        function flatpickr(s, param2) {
            // Custom flatpickr initialization
            return new Flatpickr(s, param2);

        }

        document.addEventListener('DOMContentLoaded', function() {
            // Date picker
            flatpickr('.flatpickr-date', {
                dateFormat: "Y-m-d",
                allowInput: true
            });

            // Time picker
            flatpickr('.flatpickr-time', {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true
            });
        });
    </script>
{% endblock %}