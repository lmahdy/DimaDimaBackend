{% extends 'base.html.twig' %}

{% block title %}Planning Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h2>{{ planning.note.title }}</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Details</h5>
                        <p>Date: {{ planning.datePlanifie|date('d M Y') }}</p>
                        <p>Time: {{ planning.heureDebut|date('H:i') }} - {{ planning.heureFin|date('H:i') }}</p>
                        <p>Status: {{ planning.statut|capitalize }}</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Messages</h5>
                        <div class="message-container mb-3" style="max-height: 300px; overflow-y: auto;">
                            {% for message in planning.messages %}
                                <div class="card mb-2">
                                    <div class="card-body">
                                        <p class="mb-0">{{ message.content }}</p>
                                        <small class="text-muted">
                                            {{ message.sender.email }} - {{ message.createdAt|date('H:i d/m') }}
                                        </small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <form method="post" action="{{ path('send_message', {'id': planning.id}) }}">
                            <div class="input-group">
                                <input type="text" name="content" class="form-control" placeholder="Type message...">
                                <button class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('planning_index') }}" class="btn btn-secondary">Back</a>
                    <a href="{{ path('planning_edit', {'id': planning.id}) }}" class="btn btn-warning">Edit</a>
                    <form method="post" action="{{ path('planning_delete', {'id': planning.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ planning.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
