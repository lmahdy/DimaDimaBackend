{% extends 'base.html.twig' %}

{% block title %}Plannings{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>All Plannings</h1>

        <div class="row">
            {% for planning in plannings %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ planning.note.title }}</h5>
                            <p class="card-text">
                                Date: {{ planning.datePlanifie|date('d M Y') }}<br>
                                Time: {{ planning.heureDebut|date('H:i') }} - {{ planning.heureFin|date('H:i') }}<br>
                                Status: <span class="badge bg-{{ planning.statut == 'terminÃ©' ? 'success' : 'warning' }}">
                            {{ planning.statut|capitalize }}
                        </span>
                            </p>
                            <div class="d-flex gap-2">
                                <a href="{{ path('planning_show', {'id': planning.id}) }}" class="btn btn-primary">View</a>
                                <form action="{{ path('planning_toggle_save', {'id': planning.id}) }}" method="post">
                                    <button class="btn btn-{{ planning in savedPlannings ? 'danger' : 'secondary' }}">
                                        {{ planning in savedPlannings ? 'Unsave' : 'Save' }}
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}